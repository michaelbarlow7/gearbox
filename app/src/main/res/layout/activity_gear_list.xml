<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gearboxer.gearbox.GearListActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/gearbox_orange"
        android:text="Hyde Park"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All gear is $2 for 2 hours.\n Tap on a kit to grab it."
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleText" />
    <ListView
        android:id="@+id/gearListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        >

        </ListView>

</RelativeLayout>
