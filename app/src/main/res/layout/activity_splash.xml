<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gearbox_orange"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/splashGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splashgearclosed"
        android:onClick="onContinueClick"
        />
    <ImageView
        android:id="@+id/ball0"
        android:src="@drawable/splashvolley"
        android:onClick="onContinueClick"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/ball1"
        android:src="@drawable/splashtennis"
        android:onClick="onContinueClick"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/titleWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/splashGear"
        android:src="@drawable/gearboxtextlogo"
        android:onClick="onContinueClick"
        android:scaleType="center"
        />
    <TextView
        android:id="@+id/blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/splashGear"
        android:layout_alignParentBottom="true"
        android:onClick="onContinueClick"
        android:text="Find us at\nwww.gearboxing.com"
        />

</RelativeLayout>
