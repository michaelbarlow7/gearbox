<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gearboxer.gearbox.CurrentlyPlaying">

    <TextView
        android:id="@+id/isPlayingText"
        android:text="User Name\nis playing"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gearText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isPlayingText"
        android:text="CRICKET"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        />
    <TextView
        android:id="@+id/locationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gearText"
        android:text="in Hyde Park"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="50sp"
        android:layout_below="@id/locationText"
        android:gravity="center"
        android:text="02:42:00"
        />
    <Button
        android:id="@+id/lockGearboxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:text="LOCK GEARBOX"
        />

</RelativeLayout>
